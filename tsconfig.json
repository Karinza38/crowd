{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"module": "node16",
		"target": "es2019",
		"lib": ["es2019", "es2022.error"],
		"moduleResolution": "node16",
		"jsx": "react",
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"importHelpers": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "dist", "__tests__"]
}
